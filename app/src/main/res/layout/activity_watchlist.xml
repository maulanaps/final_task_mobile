<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.submission05.ui.list_watchlist.WatchlistAllActivity"
    android:background="@drawable/bottom">

    <TextView
        android:id="@+id/tvWatchlistEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/watchlist_is_empty"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="24sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWatchListAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_10"
        tools:listitem="@layout/watchlist_all_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>